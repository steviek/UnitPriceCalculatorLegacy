<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            style="@style/Menu.Button"
            android:id="@+id/btn_new"
            android:text="@string/current_comparison"
            android:drawableLeft="@drawable/ic_list" />

        <TextView
            style="@style/Menu.Button"
            android:id="@+id/btn_saved"
            android:text="@string/saved_comparisons"
            android:drawableLeft="@drawable/ic_open" />

        <View style="@style/Menu.Divider"/>

        <TextView
            style="@style/Menu.Button"
            android:id="@+id/btn_settings"
            android:text="@string/settings"
            android:drawableLeft="@drawable/ic_action_settings" />

        <TextView
            style="@style/Menu.Button"
            android:id="@+id/btn_rate"
            android:text="@string/rate_app"
            android:drawableLeft="@drawable/ic_star" />

        <TextView
            style="@style/Menu.Button"
            android:id="@+id/btn_share"
            android:text="@string/share_app"
            android:drawableLeft="@drawable/ic_social_share" />

        <TextView
            style="@style/Menu.Button"
            android:id="@+id/btn_feedback"
            android:text="@string/send_feedback"
            android:drawableLeft="@drawable/ic_feedback" />

    </LinearLayout>
</ScrollView>