<resources>

    <style name="DialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert" />

    <style name="HeaderTextView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RowItem">
        <item name="android:saveEnabled">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FileNameEditText" parent="AppTheme">
        <item name="colorAccent">#0D47A1</item>
    </style>

    <style name="RowTextView" parent="RowItem">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <style name="RowCaption" parent="RowItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="RowEditText" parent="RowTextView">
        <item name="android:saveEnabled">false</item>
    </style>

    <style name="RowTextInputEditText">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="FlatButton" parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="Menu" />
    <style name="Menu.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:drawableTint">@color/primaryText</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Menu.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerColor</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SettingsItem">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
